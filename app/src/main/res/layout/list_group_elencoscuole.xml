<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_weight="1"
    android:background="#FAFAFA"
    android:orientation="vertical"
    android:paddingBottom="6dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/SfondoGrigioLight"
        android:paddingRight="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toEndOf="@+id/ic_scuola"
            android:layout_toRightOf="@+id/ic_scuola"
            android:minHeight="55dp">

            <TextView
                android:id="@+id/lblListHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_toLeftOf="@+id/elencoscuolegroupimg"
                android:layout_toStartOf="@+id/elencoscuolegroupimg"
                android:textColor="@color/elencoscuoletitle"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/elencoscuolegroupimg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/ic_expand_more" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/ic_scuola"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/ic_agraria" />
    </RelativeLayout>

</LinearLayout>