<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="20dp">

       <ImageButton
           android:id="@+id/rec_up"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:src="@drawable/ic_arrow_recensioni"
           android:background="@android:color/transparent"
           android:paddingLeft="10dp"
           android:paddingRight="10dp"
           android:paddingBottom="5dp"
           android:paddingTop="5dp"
           />
        <TextView
            android:id="@+id/quota"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="100"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"/>
        <ImageButton
            android:id="@+id/rec_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_recensioni"
            android:rotation="180"
            android:background="@android:color/transparent"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RatingBar
            android:id="@+id/rating_recensione"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            style="@android:style/Widget.Material.RatingBar.Indicator"
            android:theme="@style/RatingBar"
            android:paddingTop="10dp"
            />

        <TextView
            android:id="@+id/testo_recensione"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ellipsize="end"
            android:maxLines="4"
            android:padding="10dp"
            android:text="Qui verrà mostrata la recensione di un utente loggato e sarà poi possibile votarla da chiunque cliccando i bottoni a lato. Non so se si è capito bene, ma non so spiegarla meglio di cosìche ci posso fare"
            android:textSize="18sp" />

    </LinearLayout>

</LinearLayout>